<%= form_for(@user) do |f| %>
    <%= render '/shared/error_messages', object: f.object %>
    <div class="row mb-2">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2>Edit User</h2>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-3"></div>
        <%= f.label :username, 'Username', class: "col-md-2 col-form-label" %>
        <div class="col-md-4">
            <%= f.text_field :username, value: @user.username, class: 'form-control', autofocus: true %>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-3"></div>
        <%= f.label :email, 'Email', class: "col-md-2 col-form-label" %>
        <div class="col-md-4">
            <%= f.email_field :email, value: @user.email, class: 'form-control' %>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-3"></div>
        <%= f.label :role, 'Role', class: 'col-md-2 col-form-label' %>
        <div class="col-md-4">
            <%= f.select :role, User.roles.keys, {}, {class: 'form-control'} %>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-3"></div>
        <div class="col-md-3">
            <%= f.submit "Update", class: "btn text-white momit_red_btn" %>
        </div>
    </div>
<% end %>
