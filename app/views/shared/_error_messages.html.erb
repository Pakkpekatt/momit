<% if object.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
        <strong>
            <%= pluralize(object.errors.count, "error") %> found.
        </strong>
        <ul>
            <% object.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>