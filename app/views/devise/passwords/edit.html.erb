<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="row mb-2">
        <div class="col-md-4"></div>
        <div class="col-md-6">
            <h2>Change Your Password</h2>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: 'New Password', class: 'form-control' %>
            </div>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                <%= f.password_field :password_confirmation, autocomplete: "off",
                    placeholder: 'Confirm New Password', class: 'form-control' %>
            </div>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-4"></div>
        <div class="col-md-6 ">
            <%= f.submit "Change Password", class: "btn text-white momit_red_btn" %>
        </div>
    </div>
<% end %>
