<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="row mb-2">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2>Resend Account Confirmation</h2>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3"></div>
        <div class="col-md-4">
            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control',
                    value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
            </div>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-3"></div>
        <div class="col-md-6 ">
            <%= f.submit "Resend confirmation instructions", class: "btn text-white momit_red_btn" %>
        </div>
    </div>
<% end %>
