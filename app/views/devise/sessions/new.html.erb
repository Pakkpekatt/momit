<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
    <div class="row mb-2">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2>Log in</h2>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-3"></div>
        <div class="col-md-4">
            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                <%= f.text_field :username, placeholder: 'Username', autofocus: true, class: "form-control" %>
            </div>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-3"></div>
        <div class="col-md-4">
            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: "form-control" %>
            </div>
        </div>
    </div>

    <% if devise_mapping.rememberable? -%>
        <div class="row mb-4">
            <div class="col-md-3"></div>
            <div class="col-md-4">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
            </div>
        </div>
    <% end -%>

    <div class="row mb-4">
        <div class="col-md-3"></div>
        <div class="col-md-6 ">
            <%= f.submit "Log in", class: "btn text-white momit_red_btn" %>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-link" %><br />
            <% end -%>
        </div>
    </div>

<% end %>